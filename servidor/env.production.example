# Variables de entorno para producción
# Copiar este archivo a backend-nestjs/.env y ajustar valores

NODE_ENV=production
PORT=3001

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=facturador
DB_PASSWORD=tu_password_seguro
DB_DATABASE=facturador_db

# Redis (opcional, para colas de tareas)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS - Dominios permitidos (separados por coma)
ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com

# JWT Secret (generar uno seguro)
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui

# URL del frontend
FRONTEND_URL=https://tu-dominio.com

# Configuración de email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_email

# Configuración SRI (Ecuador)
SRI_AMBIENTE=2
SRI_URL_PRODUCCION=https://cel.sri.gob.ec
SRI_URL_PRUEBAS=https://celcer.sri.gob.ec


